{
  "name": "chatgpt-desktop",
  "version": "1.0.6",
  "description": "ChatGPT desktop version that can set up a proxy network",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kumshing-wilson-huang/chatgpt-desktop.git"
  },
  "keywords": [
    "chatgpt",
    "chatgpt-desktop"
  ],
  "author": "wilson.huang@kumshing.com.hk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kumshing-wilson-huang/chatgpt-desktop/issues"
  },
  "homepage": "https://github.com/kumshing-wilson-huang/chatgpt-desktop#readme",
  "devDependencies": {
    "@babel/cli": "^7.24.5",
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@electron-forge/cli": "^7.4.0",
    "electron": "^30.0.6",
    "electron-builder": "^24.13.3",
    "electron-builder-squirrel-windows": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "build": {
    "appId": "hk.com.kumshing.chatgpt-desktop",
    "productName": "ChatGPT Desktop",
    "mac": {
      "icon": "assets/chatgpt-512x512.png",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/chatgpt-512x512.png",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "files": [
      "about.html",
      "index.html",
      "locale.js",
      "main.js",
      "package.json",
      "preload.js",
      "setProxy.html",
      "locales/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/**/*",
        "to": "assets/**/*",
        "filter": ["**/*"]
      }
    ]
  },
  "dependencies": {
    "electron-store": "^7.0.3",
    "jquery": "^3.7.1",
    "path-scurry": "^1.11.1"
  }
}
